<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <div class="mb-6 flex items-center justify-between">
    <nav class="flex" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2">
        <li>
          <div class="flex items-center">
            <a href="#" class="text-sm font-medium text-gray-500 hover:text-gray-700">Projects</a>
            <svg class="h-4 w-4 flex-shrink-0 text-gray-400 mx-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <a href="#" class="text-sm font-medium text-gray-500 hover:text-gray-700"><%= @task.project.name %></a>
            <svg class="h-4 w-4 flex-shrink-0 text-gray-400 mx-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <a href="#" class="text-sm font-medium text-blue-600 hover:text-blue-700"><%= @task.name %></a>
          </div>
        </li>
      </ol>
    </nav>
    <div class="flex space-x-3">
      <%= link_to edit_organization_task_path(@organization, @task), 
        class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
        </svg>
        Edit
      <% end %>
      <%= link_to organization_task_path(@organization, @task), 
        method: :delete, 
        class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500",
        data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?" } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        Delete
      <% end %>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
    <!-- Left Column - Task Details -->
    <div class="lg:col-span-3 space-y-6">
      <!-- Task Header -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-5">
          <div class="flex items-start">
            <!-- Task Type/Priority Icon -->
            <% if @task.priority == "high" %>
              <div class="flex-shrink-0 mt-1">
                <span class="inline-flex items-center justify-center h-8 w-8 rounded-full bg-red-100">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-600" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.293 7.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L6.707 7.707a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                  </svg>
                </span>
              </div>
            <% elsif @task.priority == "medium" %>
              <div class="flex-shrink-0 mt-1">
                <span class="inline-flex items-center justify-center h-8 w-8 rounded-full bg-orange-100">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-orange-600" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M3.293 9.707a1 1 0 010-1.414l6-6a1 1 0 011.414 0l6 6a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L4.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                  </svg>
                </span>
              </div>
            <% else %>
              <div class="flex-shrink-0 mt-1">
                <span class="inline-flex items-center justify-center h-8 w-8 rounded-full bg-green-100">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M16.707 10.293a1 1 0 010 1.414l-6 6a1 1 0 01-1.414 0l-6-6a1 1 0 111.414-1.414L9 14.586V3a1 1 0 012 0v11.586l4.293-4.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </span>
              </div>
            <% end %>
            
            <!-- Task Title and ID -->
            <div class="ml-4 flex-1">
              <div class="flex items-center justify-between">
                <h1 class="text-xl font-semibold text-gray-900"><%= @task.name %></h1>
                <span class="text-sm text-gray-500">#<%= @task.id %></span>
              </div>
              
              <div class="mt-1 flex flex-wrap items-center gap-2">
                <span class="inline-flex items-center px-2.5 py-0.5 text-xs font-medium <%= status_badge_color(@task.status) %>">
                  <%= @task.status.capitalize %>
                </span>
                <span class="inline-flex items-center px-2.5 py-0.5 text-xs font-medium <%= priority_badge_color(@task.priority) %>">
                  <%= @task.priority.capitalize %>
                </span>
                <%= link_to organization_project_path(@organization, @task.project),
                    class: "inline-flex items-center px-2.5 py-0.5 text-xs font-medium bg-#{@task.project.color}-50 text-#{@task.project.color}-700" do %>
                  <span class="w-2 h-2 mr-1.5 bg-<%= @task.project.color %>-500"></span>
                  <%= @task.project.name %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Description -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-5">
          <h2 class="text-lg font-medium text-gray-900">Description</h2>
          <div class="mt-4 text-gray-500 w-full">
            <% if @task.description.present? %>
              <div class="w-full"><%= simple_format(@task.description, class: "mb-0 w-full") %></div>
            <% else %>
              <p class="text-gray-400 italic w-full">No description provided</p>
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- Attachments -->
      <% if @task.task_attachments.attached? %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-6 py-5">
            <% attachment_count = @task.task_attachments.count %>
            <button type="button" id="toggle-attachments" class="flex items-center justify-between w-full focus:outline-none">
              <div class="flex items-center">
                <h2 class="text-lg font-medium text-gray-900">Attachments</h2>
                <span class="ml-2 text-sm text-gray-500">(<%= attachment_count %> <%= 'file'.pluralize(attachment_count) %>)</span>
              </div>
              <svg id="attachments-chevron-down" class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
              <svg id="attachments-chevron-up" class="h-5 w-5 text-gray-400 hidden" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd" />
              </svg>
            </button>
            <ul id="attachments-list" class="mt-4 divide-y divide-gray-200 hidden">
              <% @task.task_attachments.each do |file| %>
                <li class="py-3 flex justify-between items-center">
                  <div class="flex items-center">
                    <svg class="h-5 w-5 text-gray-400 mr-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M8 4a3 3 0 00-3 3v4a5 5 0 0010 0V7a1 1 0 112 0v4a7 7 0 11-14 0V7a5 5 0 0110 0v4a3 3 0 11-6 0V7a1 1 0 012 0v4a1 1 0 102 0V7a3 3 0 00-3-3z" clip-rule="evenodd" />
                    </svg>
                    <div>
                      <a href="<%= rails_blob_path(file, disposition: :attachment) %>" class="text-sm font-medium text-blue-600 hover:text-blue-500"><%= file.filename %></a>
                      <p class="text-xs text-gray-500">
                        Added <%= file.created_at.strftime("%b %d, %Y") %> â€¢ <%= number_to_human_size(file.blob.byte_size) %>
                      </p>
                    </div>
                  </div>
                  <div class="flex space-x-2">
                    <%= link_to rails_blob_path(file, disposition: :attachment), 
                        class: "text-gray-400 hover:text-gray-500", 
                        title: "Download" do %>
                      <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                      </svg>
                    <% end %>
                    <%= link_to destroy_attachment_organization_task_path(@organization, @task, attachment_id: file.id), 
                        method: :delete, 
                        class: "text-gray-400 hover:text-red-500", 
                        title: "Delete",
                        data: { confirm: "Are you sure you want to delete this attachment?" } do %>
                      <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                      </svg>
                    <% end %>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
        
        <script>
          document.addEventListener('DOMContentLoaded', function() {
            const toggleButton = document.getElementById('toggle-attachments');
            const attachmentsList = document.getElementById('attachments-list');
            const chevronDown = document.getElementById('attachments-chevron-down');
            const chevronUp = document.getElementById('attachments-chevron-up');
            
            toggleButton.addEventListener('click', function() {
              if (attachmentsList.classList.contains('hidden')) {
                attachmentsList.classList.remove('hidden');
                chevronDown.classList.add('hidden');
                chevronUp.classList.remove('hidden');
              } else {
                attachmentsList.classList.add('hidden');
                chevronDown.classList.remove('hidden');
                chevronUp.classList.add('hidden');
              }
            });
          });
        </script>
      <% end %>
      
      <!-- Comments -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-5">
          <h2 class="text-lg font-medium text-gray-900">Comments</h2>
          
          <!-- Comment Form -->
          <div class="mt-4">
            <%= form_with(model: [@organization, @task, @comment], class: "space-y-3") do |form| %>
              <div>
                <%= form.text_area :body, 
                    rows: 3, 
                    placeholder: "Add a comment...", 
                    class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" 
                %>
              </div>
              <div class="flex justify-end">
                <%= form.submit "Add comment", 
                    class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" 
                %>
              </div>
            <% end %>
          </div>
          
          <!-- Comment List -->
          <% if @task.comments.any? %>
            <div class="mt-6 flow-root">
              <ul class="-mb-8">
                <% @task.comments.each_with_index do |comment, index| %>
                  <li>
                    <div class="relative pb-8">
                      <% if index < @task.comments.length - 1 %>
                        <span class="absolute top-5 left-5 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                      <% end %>
                      <div class="relative flex items-start space-x-3">
                        <div class="relative">
                          <div class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                          </div>
                        </div>
                        <div class="min-w-0 flex-1">
                          <div>
                            <div class="text-sm font-medium text-gray-900">
                              <%= comment.membership.user.full_name %>
                            </div>
                            <p class="mt-0.5 text-xs text-gray-500">
                              <%= comment.created_at.strftime("%b %d, %Y at %H:%M") %>
                            </p>
                          </div>
                          <div class="mt-2 text-sm text-gray-700">
                            <p><%= comment.body %></p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
          <% else %>
            <div class="text-center py-6">
              <svg class="mx-auto h-12 w-12 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No comments yet</h3>
              <p class="mt-1 text-sm text-gray-500">Start the conversation by adding the first comment.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Right Column - Meta Info -->
    <div class="space-y-6">
      <!-- Details -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-4 py-5 sm:p-6">
          <h2 class="text-lg font-medium text-gray-900">Details</h2>
          <dl class="mt-4 space-y-4">
            <div class="sm:grid sm:grid-cols-3 sm:gap-4">
              <dt class="text-sm font-medium text-gray-500">Status</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <span class="inline-flex items-center px-2.5 py-0.5 text-xs font-medium <%= status_badge_color(@task.status) %>">
                  <%= @task.status.capitalize %>
                </span>
              </dd>
            </div>
            
            <div class="sm:grid sm:grid-cols-3 sm:gap-4">
              <dt class="text-sm font-medium text-gray-500">Priority</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <span class="inline-flex items-center px-2.5 py-0.5 text-xs font-medium <%= priority_badge_color(@task.priority) %>">
                  <%= @task.priority.capitalize %>
                </span>
              </dd>
            </div>
            
            <div class="sm:grid sm:grid-cols-3 sm:gap-4">
              <dt class="text-sm font-medium text-gray-500">Start date</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <%= @task.planned_start_date&.strftime("%b %d, %Y") || "Not set" %>
              </dd>
            </div>
            
            <div class="sm:grid sm:grid-cols-3 sm:gap-4">
              <dt class="text-sm font-medium text-gray-500">Due date</dt>
              <dd class="mt-1 sm:mt-0 sm:col-span-2">
                <% if @task.planned_end_date %>
                  <span class="text-sm <%= Date.parse(@task.planned_end_date.to_s) < Date.today ? 'text-red-600 font-medium' : 'text-gray-900' %>">
                    <%= @task.planned_end_date.strftime("%b %d, %Y") %>
                    <% if Date.parse(@task.planned_end_date.to_s) < Date.today %>
                      <span class="text-xs text-red-600 font-normal">(overdue)</span>
                    <% end %>
                  </span>
                <% else %>
                  <span class="text-sm text-gray-900">Not set</span>
                <% end %>
              </dd>
            </div>
            
            <div class="sm:grid sm:grid-cols-3 sm:gap-4">
              <dt class="text-sm font-medium text-gray-500">Created</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <%= @task.created_at.strftime("%b %d, %Y") %>
              </dd>
            </div>
            
            <div class="sm:grid sm:grid-cols-3 sm:gap-4">
              <dt class="text-sm font-medium text-gray-500">Updated</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <%= @task.updated_at.strftime("%b %d, %Y") %>
              </dd>
            </div>
          </dl>
        </div>
      </div>
      
      <!-- People -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-4 py-5 sm:p-6">
          <h2 class="text-lg font-medium text-gray-900">People</h2>
          <dl class="mt-4 space-y-4">
            <div class="flex items-center">
              <dt class="text-sm font-medium text-gray-500 w-1/3">Assignee</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 w-2/3">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-8 w-8 rounded-full bg-gray-200 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm font-medium text-gray-900"><%= @task.assignee.user.full_name %></p>
                  </div>
                </div>
              </dd>
            </div>
            
            <div class="flex items-center">
              <dt class="text-sm font-medium text-gray-500 w-1/3">Reporter</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 w-2/3">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-8 w-8 rounded-full bg-gray-200 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm font-medium text-gray-900"><%= @task.reporter.user.full_name %></p>
                  </div>
                </div>
              </dd>
            </div>
          </dl>
        </div>
      </div>
      
      <!-- Time Tracking -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-4 py-5 sm:p-6">
          <h2 class="text-lg font-medium text-gray-900">Time Tracking</h2>
          
          <% if @task.task_timetrackings.any? %>
            <div class="mt-4 space-y-4">
              <div>
                <div class="mb-2 flex justify-between items-center">
                  <span class="text-sm font-medium text-gray-500">Total time spent</span>
                  <span class="text-sm font-medium text-blue-600"><%= @task.total_time_spent %> hours</span>
                </div>
                <div class="h-2 bg-gray-200 rounded-full overflow-hidden">
                  <div class="h-2 bg-blue-600 rounded-full" style="width: 100%"></div>
                </div>
              </div>
              
              <div class="pt-3 border-t border-gray-200">
                <h3 class="text-sm font-medium text-gray-700 mb-3">Time spent by users</h3>
                <dl class="space-y-3">
                  <% @task.total_time_spent_by_users.each do |membership_id, duration| %>
                    <% membership = Membership.find(membership_id) %>
                    <div class="flex justify-between items-center">
                      <dt class="text-sm text-gray-600"><%= membership.user.full_name %></dt>
                      <dd class="text-sm font-medium text-blue-600">
                        <%= duration %> hrs <span class="text-xs text-gray-500">(<%= (duration / 8.0).round(1) %> days)</span>
                      </dd>
                    </div>
                  <% end %>
                </dl>
              </div>
            </div>
          <% end %>
          
          <!-- Time tracking form -->
          <div class="mt-6 border-t border-gray-200 pt-4">
            <h3 class="text-sm font-medium text-gray-700 mb-3">Log time</h3>
            <%= form_with(model: [ @organization, @task, @task_timetracking ], class: "space-y-3") do |form| %>
              <%= render "shared/errors", object: form.object %>
              
              <div class="grid grid-cols-2 gap-3">
                <div>
                  <%= form.label :date, class: "block text-xs font-medium text-gray-700 mb-1" %>
                  <%= form.date_field :date, value: Date.today, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
                </div>
                
                <div>
                  <%= form.label :duration, class: "block text-xs font-medium text-gray-700 mb-1" %>
                  <%= form.number_field :duration,
                      min: 1,
                      max: 12,
                      required: true,
                      step: 0.5,
                      placeholder: "Hours",
                      class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
                </div>
              </div>
              
              <div class="grid grid-cols-2 gap-3">
                <div>
                  <%= form.label :start, class: "block text-xs font-medium text-gray-700 mb-1" %>
                  <%= form.time_field :start, value: Time.current.strftime("%H:%M"), class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
                </div>
                
                <div>
                  <%= form.label :end, class: "block text-xs font-medium text-gray-700 mb-1" %>
                  <%= form.time_field :end, value: 1.hour.from_now.strftime("%H:%M"), class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
                </div>
              </div>
              
              <div>
                <%= form.submit "Log time", class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>