<div class="container mx-auto px-4 sm:px-6 lg:px-8">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="flex items-center justify-between p-4 sm:p-6 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900">
        <%= @task.new_record? ? "Create Task" : "Edit Task" %>
      </h2>
    </div>
    
    <% if task.errors.any? %>
      <div id="error_explanation" class="mx-4 sm:mx-6 mt-4 bg-red-50 text-red-600 px-4 py-3 font-medium rounded-md border border-red-100">
        <h3 class="text-sm font-semibold"><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h3>
        <ul class="mt-2 text-sm list-disc list-inside">
          <% task.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="p-4 sm:p-6">
      <%= form_with(model: [ @organization, task ], class: "space-y-6") do |form| %>
        <!-- Main info section -->
        <div class="grid gap-6 md:grid-cols-2">
          <div class="md:col-span-2">
            <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm", placeholder: "Task summary" %>
          </div>
          
          <div class="md:col-span-2">
            <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_area :description, rows: 8, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm", placeholder: "Add a description..." %>
          </div>
        </div>
        
        <!-- Project and people section -->
        <div class="bg-gray-50 p-4 rounded-md border border-gray-200">
          <h3 class="text-sm font-medium text-gray-700 mb-4">Project details</h3>
          <div class="grid gap-4 md:grid-cols-2">
            <div>
              <%= form.label :project_id, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.select :project_id, 
                @projects.map { |c| [ c.name, c.id ] }, 
                { prompt: "Select a project" }, 
                { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm bg-white" } 
              %>
            </div>
            
            <div>
              <%= form.label :assignee_id, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.select :assignee_id, 
                @assignees.map { |a| [ a.user.full_name, a.id ] }, 
                { prompt: "Select assignee" }, 
                { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm bg-white" } 
              %>
            </div>
            
            <div>
              <%= form.label :reporter_id, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.select :reporter_id, 
                @reporters.map { |pm| [ pm.user.full_name, pm.id ] }, 
                { prompt: "Select reporter" }, 
                { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm bg-white" } 
              %>
            </div>
            
            <div>
              <%= form.label :priority, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.select :priority, 
                Task.priorities.keys.map { |priority| [ priority.humanize, priority ] }, 
                { prompt: "Select priority" }, 
                { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm bg-white" } 
              %>
            </div>
          </div>
        </div>
        
        <!-- Dates and status section -->
        <div class="bg-gray-50 p-4 rounded-md border border-gray-200">
          <h3 class="text-sm font-medium text-gray-700 mb-4">Schedule & Status</h3>
          <div class="grid gap-4 md:grid-cols-3">
            <div>
              <%= form.label :planned_start_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.date_field :planned_start_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm bg-white" %>
            </div>
            
            <div>
              <%= form.label :planned_end_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.date_field :planned_end_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm bg-white" %>
            </div>
            
            <div>
              <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.select :status, 
                Task.statuses.keys.map { |status| [ status.humanize, status ] }, 
                { prompt: "Select status" }, 
                { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm bg-white" } 
              %>
            </div>
          </div>
        </div>
        
        <!-- Attachments section -->
        <div class="bg-gray-50 p-4 rounded-md border border-gray-200">
          <h3 class="text-sm font-medium text-gray-700 mb-4">Attachments</h3>
          
          <% if @task.task_attachments.any? %>
            <div class="mb-4 space-y-2">
              <% @task.task_attachments.each do |attachment| %>
                <%= form.hidden_field :task_attachments, multiple: true, value: attachment.signed_id %>
                <div class="flex items-center p-2 bg-white border border-gray-200 rounded-md">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13" />
                  </svg>
                  <span class="text-sm truncate"><%= attachment.filename %></span>
                </div>
              <% end %>
            </div>
          <% end %>
          
          <div class="flex items-center">
            <%= form.file_field :task_attachments, multiple: true, 
              class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" 
            %>
          </div>
        </div>
        
        <!-- Action buttons -->
        <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
          <%= link_to "Cancel", task.new_record? ? organization_tasks_path(@organization) : organization_task_path(@organization, task), 
            class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" 
          %>
          
          <%= form.submit class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>