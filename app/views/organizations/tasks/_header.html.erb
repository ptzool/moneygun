<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2">
      <li>
        <div class="flex items-center">
          <%= link_to organization_projects_path(@organization), class: "text-sm font-medium text-gray-500 hover:text-gray-700" do %>
            Projects
          <% end %>
          <svg class="h-4 w-4 flex-shrink-0 text-gray-400 mx-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
        </div>
      </li>
      <li>
        <div class="flex items-center">
          <%= link_to organization_project_path(@organization, @task.project), class: "text-sm font-medium text-gray-500 hover:text-gray-700" do %>
            <%= @task.project.name %>
          <% end %>
          <svg class="h-4 w-4 flex-shrink-0 text-gray-400 mx-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
        </div>
      </li>
      <li>
        <div class="flex items-center">
          <% if defined?(show_page) && show_page %>
            <span class="text-sm font-medium text-blue-600"><%= @task.name %></span>
          <% elsif defined?(edit_page) && edit_page %>
            <%= link_to organization_task_path(@organization, @task), class: "text-sm font-medium text-gray-500 hover:text-gray-700" do %>
              <%= @task.name %>
            <% end %>
            <svg class="h-4 w-4 flex-shrink-0 text-gray-400 mx-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-medium text-blue-600">Edit</span>
          <% else %>
            <span class="text-sm font-medium text-blue-600"><%= @task.name %></span>
          <% end %>
        </div>
      </li>
    </ol>
  </nav>
  
  <% if defined?(show_page) && show_page %>
    <div class="flex space-x-3">
      <%= link_to edit_organization_task_path(@organization, @task), 
        class: "inline-flex items-center px-3 py-2 border border-green-300 shadow-sm text-sm font-medium rounded-md text-green-700 bg-green-50 hover:bg-green-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
        </svg>
        Edit
      <% end %>
      <%= button_to organization_task_path(@organization, @task), 
        method: :delete, 
        form: { data: { turbo_confirm: "Are you sure you want to delete this task?" } },
        class: "inline-flex items-center px-3 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-red-50 hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        Delete
      <% end %>
    </div>
  <% end %>
</div>