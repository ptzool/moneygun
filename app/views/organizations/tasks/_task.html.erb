<tr class="hover:bg-gray-50 border-t border-gray-200">
  <td class="w-10 pl-4 pr-1 py-3">
    <div class="flex items-center justify-center">
      <input type="checkbox" class="h-4 w-4 text-blue-600 rounded border-gray-300 focus:ring-blue-500">
    </div>
  </td>
  <td class="px-3 py-3 whitespace-nowrap">
    <span class="text-xs text-blue-600 font-medium hover:underline">
      <%= link_to "##{task.id}", [@organization, task] %>
    </span>
  </td>
  <td class="px-3 py-3">
    <div class="flex items-start">
      <!-- Priority icon -->
      <% if task.priority == "high" %>
        <svg class="h-4 w-4 text-red-500 mr-2 mt-0.5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
        </svg>
      <% elsif task.priority == "medium" %>
        <svg class="h-4 w-4 text-orange-500 mr-2 mt-0.5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 15l8.385 3.96-8.385-16.92-8.385 16.92 8.385-3.96z"></path>
        </svg>
      <% else %>
        <svg class="h-4 w-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 11l8.385 3.96-8.385-16.92-8.385 16.92 8.385-3.96z"></path>
        </svg>
      <% end %>
      
      <!-- Task name with truncation -->
      <div class="min-w-0 flex-1">
        <%= link_to [@organization, task], class: "text-sm font-medium text-gray-900 hover:text-blue-600 truncate block" do %>
          <%= task.name %>
        <% end %>
        <div class="text-xs text-gray-500">
          <% if task.planned_start_date && task.planned_end_date %>
            <%= task.planned_start_date.strftime("%b %d") %> - <%= task.planned_end_date.strftime("%b %d") %>
          <% end %>
        </div>
      </div>
    </div>
  </td>
  <td class="px-3 py-3 whitespace-nowrap">
    <%= link_to organization_project_path(@organization, task.project),
        class: "px-2 py-1 text-xs font-medium inline-flex items-center border whitespace-nowrap bg-#{task.project.color}-50 border-#{task.project.color}-200 text-#{task.project.color}-700" do %>
      <span class="w-2 h-2 bg-<%= task.project.color %>-500 mr-1.5"></span>
      <%= task.project.name %>
    <% end %>
  </td>
  <td class="px-3 py-3 whitespace-nowrap">
    <span class="inline-flex items-center px-2 py-0.5 text-xs font-medium <%= priority_badge_color(task.priority) %>">
      <%= task.priority.capitalize %>
    </span>
  </td>
  <td class="px-3 py-3 whitespace-nowrap">
    <span class="inline-flex items-center px-2 py-0.5 text-xs font-medium <%= status_badge_color(task.status) %>">
      <%= task.status.capitalize %>
    </span>
  </td>
  <td class="px-3 py-3 whitespace-nowrap text-sm text-gray-500">
    <%= task.planned_start_date&.strftime("%Y-%m-%d") %>
  </td>
  <td class="px-3 py-3 whitespace-nowrap text-sm text-gray-500">
    <% if task.planned_end_date %>
      <span class="<%= Date.parse(task.planned_end_date.to_s) < Date.today ? 'text-red-600' : 'text-gray-500' %>">
        <%= task.planned_end_date.strftime("%Y-%m-%d") %>
      </span>
    <% end %>
  </td>
  <td class="px-3 py-3 text-right whitespace-nowrap">
    <div class="inline-flex items-center space-x-1">
      <%= link_to organization_task_path(@organization, task), 
          class: "p-1.5 text-gray-500 hover:text-blue-600 hover:bg-blue-50 rounded-md transition-colors", 
          title: "View task" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
          <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
          <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
        </svg>
      <% end %>
      
      <%= link_to edit_organization_task_path(@organization, task), 
          class: "p-1.5 text-gray-500 hover:text-green-600 hover:bg-green-50 rounded-md transition-colors", 
          title: "Edit task" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
        </svg>
      <% end %>
      
      <%= link_to organization_task_path(@organization, task), 
          method: :delete, 
          class: "p-1.5 text-gray-500 hover:text-red-600 hover:bg-red-50 rounded-md transition-colors", 
          data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?" },
          title: "Delete task" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
      <% end %>
    </div>
  </td>
</tr>