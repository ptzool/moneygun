<div class="w-full">
  <div class="flex flex-col bg-white shadow-sm rounded-lg border border-gray-200">
    <div class="border-b border-gray-200 bg-gray-50 px-6 py-4 flex flex-col sm:flex-row sm:items-center justify-between gap-4">
      <h2 class="text-base font-medium text-gray-900 flex items-center">
        <% if task_category.new_record? %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-500" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
          Create Task Category
        <% else %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-500" viewBox="0 0 20 20" fill="currentColor">
            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
          </svg>
          Edit Task Category
        <% end %>
      </h2>
    </div>
    
    <% if task_category.errors.any? %>
      <div id="error_explanation" class="mx-4 sm:mx-6 mt-4 bg-red-50 text-red-600 px-4 py-3 font-medium rounded-md border border-red-100">
        <h3 class="text-sm font-semibold flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1.5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
          <%= pluralize(task_category.errors.count, "error") %> prohibited this category from being saved:
        </h3>
        <ul class="mt-2 text-sm list-disc list-inside">
          <% task_category.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="p-4 sm:p-6">
      <%= form_with(model: [@organization, task_category], class: "space-y-6 max-w-full") do |form| %>
        <!-- Basic Information -->
        <div class="grid gap-6 md:grid-cols-2">
          <div>
            <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_field :name,
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                placeholder: "Enter category name",
                autofocus: true,
                autocomplete: "off",
                required: true %>
            <p class="mt-1 text-xs text-gray-500">Use a clear, descriptive name (e.g., "Development", "Testing")</p>
          </div>

          <div>
            <%= form.label :color, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <div class="flex items-center space-x-3">
              <%= form.color_field :color,
                  class: "w-16 h-10 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500",
                  value: task_category.color || "#3B82F6" %>
              <%= form.text_field :color,
                  class: "flex-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                  placeholder: "#3B82F6",
                  pattern: "^#[0-9A-Fa-f]{6}$" %>
            </div>
            <p class="mt-1 text-xs text-gray-500">Choose a color to identify this category</p>
          </div>
        </div>

        <div>
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_area :description,
              rows: 4,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
              placeholder: "Describe what types of tasks belong in this category..." %>
          <p class="mt-1 text-xs text-gray-500">Optional description to help team members understand when to use this category</p>
        </div>

        <!-- Status -->
        <div class="bg-gray-50 p-5 rounded-md border border-gray-200">
          <h3 class="text-sm font-medium text-gray-700 mb-4 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5 text-gray-500" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Status
          </h3>
          <div class="flex items-center">
            <%= form.check_box :active,
                class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded",
                checked: task_category.active? %>
            <%= form.label :active, "Active category", class: "ml-2 block text-sm text-gray-900" %>
            <p class="ml-6 text-xs text-gray-500">Inactive categories won't appear in task creation forms</p>
          </div>
        </div>

        <!-- Action buttons -->
        <div class="flex justify-between sm:justify-end space-x-4 pt-5 border-t border-gray-200">
          <%= link_to task_category.new_record? ? organization_task_categories_path(@organization) : organization_task_category_path(@organization, task_category),
            class: "px-5 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 min-w-[100px] text-center transition-colors" do %>
            Cancel
          <% end %>
          <%= form.button type: "submit", class: "px-5 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 min-w-[100px] transition-colors" do %>
            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <%= task_category.new_record? ? "Create Category" : "Update Category" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>