<div class="w-full">
  <div class="flex flex-col bg-white shadow-sm rounded-lg border border-gray-200">
    <div class="border-b border-gray-200 bg-gray-50 px-6 py-4 flex flex-col sm:flex-row sm:items-center justify-between gap-4">
      <div class="flex items-center">
        <div class="w-6 h-6 rounded-full mr-3 flex-shrink-0" style="background-color: <%= @task_category.color %>"></div>
        <h1 class="text-xl font-semibold text-gray-900"><%= @task_category.name %></h1>
        <% unless @task_category.active? %>
          <span class="ml-3 inline-flex items-center px-2 py-1 text-xs font-medium bg-gray-100 text-gray-800 rounded-full">
            Inactive
          </span>
        <% end %>
      </div>
      
      <div class="flex items-center space-x-3">
        <%= link_to edit_organization_task_category_path(@organization, @task_category),
            class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Edit Category
        <% end %>
        
        <%= link_to organization_task_category_path(@organization, @task_category),
            method: :delete,
            data: { 
              confirm: "Are you sure you want to delete this category? Tasks assigned to this category will be unassigned.",
              turbo_method: :delete
            },
            class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-red-600 border border-transparent rounded-md shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
          Delete
        <% end %>
      </div>
    </div>

    <div class="p-6">
      <!-- Category Details -->
      <div class="mb-8">
        <% if @task_category.description.present? %>
          <h3 class="text-lg font-medium text-gray-900 mb-3">Description</h3>
          <p class="text-gray-700 leading-relaxed"><%= simple_format(@task_category.description) %></p>
        <% else %>
          <p class="text-gray-500 italic">No description provided for this category.</p>
        <% end %>
      </div>

      <!-- Category Stats -->
      <div class="bg-gray-50 rounded-lg p-6 mb-8">
        <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v4a2 2 0 01-2 2H9a2 2 0 01-2-2z" />
          </svg>
          Statistics
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
          <div class="text-center">
            <div class="text-2xl font-bold text-blue-600"><%= @task_category.tasks.count %></div>
            <div class="text-sm text-gray-600">Total Tasks</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-green-600"><%= @task_category.tasks.where(status: 'open').count %></div>
            <div class="text-sm text-gray-600">Open Tasks</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-yellow-600"><%= @task_category.tasks.where(status: 'in_progress').count %></div>
            <div class="text-sm text-gray-600">In Progress</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-gray-600"><%= @task_category.tasks.where(status: 'closed').count %></div>
            <div class="text-sm text-gray-600">Completed</div>
          </div>
        </div>
      </div>

      <!-- Tasks in this Category -->
      <div>
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-lg font-medium text-gray-900 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            Tasks in this Category
            <span class="ml-2 px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">
              <%= @tasks.total_count %>
            </span>
          </h3>
          
          <%= link_to new_organization_task_path(@organization, task_category_id: @task_category.id),
              class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            New Task
          <% end %>
        </div>

        <% if @tasks.any? %>
          <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Task
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Project
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Assignee
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Status
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Priority
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Due Date
                    </th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% @tasks.each do |task| %>
                    <tr class="hover:bg-gray-50">
                      <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-medium text-gray-900">
                          <%= link_to task.name, organization_task_path(@organization, task), 
                              class: "hover:text-blue-600 transition-colors" %>
                        </div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-900"><%= task.project.name %></div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-900"><%= task.assignee.user.full_name %></div>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= 
                          case task.status
                          when 'open' then 'bg-green-100 text-green-800'
                          when 'in_progress' then 'bg-yellow-100 text-yellow-800'
                          when 'closed' then 'bg-gray-100 text-gray-800'
                          end %>">
                          <%= task.status.humanize %>
                        </span>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= 
                          case task.priority
                          when 'high' then 'bg-red-100 text-red-800'
                          when 'medium' then 'bg-yellow-100 text-yellow-800'
                          when 'low' then 'bg-blue-100 text-blue-800'
                          end %>">
                          <%= task.priority.humanize %>
                        </span>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= task.planned_end_date&.strftime("%b %d, %Y") || "No deadline" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>

          <div class="mt-6">
            <%= paginate @tasks if respond_to?(:paginate) %>
          </div>
        <% else %>
          <div class="text-center py-12 bg-gray-50 rounded-lg border-2 border-dashed border-gray-300">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No tasks in this category</h3>
            <p class="mt-1 text-sm text-gray-500">Get started by creating a task in this category.</p>
            <div class="mt-6">
              <%= link_to new_organization_task_path(@organization, task_category_id: @task_category.id),
                  class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                </svg>
                Create Task
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>