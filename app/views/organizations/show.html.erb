<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <div class="mb-6 flex items-center justify-between">
    <nav class="flex" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2">
        <li>
          <div class="flex items-center">
            <a href="<%= root_path %>" class="text-sm font-medium text-gray-500 hover:text-gray-700">Home</a>
            <svg class="h-4 w-4 flex-shrink-0 text-gray-400 mx-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <a href="<%= organizations_path %>" class="text-sm font-medium text-gray-500 hover:text-gray-700">Organizations</a>
            <svg class="h-4 w-4 flex-shrink-0 text-gray-400 mx-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <span class="text-sm font-medium text-blue-600"><%= @organization.name %></span>
          </div>
        </li>
      </ol>
    </nav>
    <div class="flex space-x-3">
      <% if policy(@organization).edit? %>
        <%= link_to edit_organization_path(@organization), 
          class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
          </svg>
          Edit
        <% end %>
      <% end %>
      
      <% if @organization.can_transfer?(current_user) %>
        <%= link_to organization_transfer_path(@organization), 
          class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path d="M8 5a1 1 0 100 2h5.586l-1.293 1.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L13.586 5H8z" />
            <path d="M12 15a1 1 0 100-2H6.414l1.293-1.293a1 1 0 10-1.414-1.414l-3 3a1 1 0 000 1.414l3 3a1 1 0 001.414-1.414L6.414 15H12z" />
          </svg>
          Transfer
        <% end %>
      <% end %>
      
      <% if policy(@organization).destroy? %>
        <%= button_to organization_path(@organization),
          method: :delete,
          data: { turbo_confirm: "Are you sure you want to delete this organization? This action cannot be undone." },
          class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
          Delete
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
    <!-- Left Column - Organization Details -->
    <div class="lg:col-span-3 space-y-6">
      <!-- Organization Header -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-5">
          <div class="flex items-start">
            <!-- Organization Logo -->
            <div class="flex-shrink-0 mt-1">
              <% if @organization.logo.attached? %>
                <%= image_tag @organization.logo.variant(resize_to_limit: [64, 64]), class: "h-16 w-16 rounded-md object-cover" %>
              <% else %>
                <span class="inline-flex items-center justify-center h-16 w-16 rounded-md bg-blue-100">
                  <span class="text-xl font-medium text-blue-600"><%= @organization.name[0].upcase %></span>
                </span>
              <% end %>
            </div>
            
            <!-- Organization Title and Info -->
            <div class="ml-4 flex-1">
              <div class="flex items-center justify-between">
                <h1 class="text-xl font-semibold text-gray-900"><%= @organization.name %></h1>
                <span class="text-sm text-gray-500">#<%= @organization.id %></span>
              </div>
              
              <div class="mt-1 flex flex-wrap items-center gap-2">
                <% if @organization.email.present? %>
                  <a href="mailto:<%= @organization.email %>" class="text-sm text-blue-600 hover:text-blue-800">
                    <%= @organization.email %>
                  </a>
                <% else %>
                  <span class="text-sm text-gray-500">No email provided</span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Organization Address -->
      <% if @organization.address.present? %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-6 py-5">
            <h2 class="text-lg font-medium text-gray-900">Address</h2>
            <div class="mt-4 text-gray-500 w-full">
              <div class="w-full"><%= simple_format(@organization.address, class: "mb-0 w-full") %></div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Projects Section -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="flex items-center justify-between px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-medium text-gray-900">Projects</h2>
          <%= link_to new_organization_project_path(@organization), 
              class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            Add Project
          <% end %>
        </div>
        
        <div class="px-6 py-4">
          <% if @organization.projects.any? %>
            <div class="grid gap-4 grid-cols-1 sm:grid-cols-2">
              <% @organization.projects.limit(4).each do |project| %>
                <%= link_to organization_project_path(@organization, project), class: "flex items-center p-3 border border-gray-200 rounded-md hover:bg-gray-50" do %>
                  <% if project.project_logo.attached? %>
                    <%= image_tag project.project_logo.variant(resize_to_limit: [32, 32]), class: "h-8 w-8 mr-3 rounded-md" %>
                  <% else %>
                    <div class="h-8 w-8 mr-3 rounded-md bg-blue-100 flex items-center justify-center">
                      <span class="text-sm font-medium text-blue-600"><%= project.name[0].upcase %></span>
                    </div>
                  <% end %>
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 truncate"><%= project.name %></p>
                    <% if project.archived? %>
                          <span class="inline-flex items-center px-2.5 py-0.5 text-xs font-medium bg-gray-100 text-gray-800">Archived</span>
                        <% else %>
                          <span class="inline-flex items-center px-2.5 py-0.5 text-xs font-medium bg-green-100 text-green-800">Active</span>
                        <% end %>
                  </div>
                  <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              <% end %>
            </div>
            <% if @organization.projects.count > 4 %>
              <div class="mt-4 text-center">
                <%= link_to organization_projects_path(@organization), class: "text-sm text-blue-600 hover:text-blue-800" do %>
                  View all <%= @organization.projects.count %> projects
                <% end %>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-8">
              <svg class="mx-auto h-12 w-12 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No projects</h3>
              <p class="mt-1 text-sm text-gray-500">Get started by creating a new project.</p>
              <div class="mt-4">
                <%= link_to new_organization_project_path(@organization), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
                  <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                  </svg>
                  Create Project
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Right Column - Organization Info -->
    <div class="space-y-6">
      <!-- Organization Details -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-4 py-5 sm:p-6">
          <h2 class="text-lg font-medium text-gray-900">Details</h2>
          <dl class="mt-4 space-y-4">
            <div class="sm:grid sm:grid-cols-3 sm:gap-4">
              <dt class="text-sm font-medium text-gray-500">Registration Number</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <%= @organization.registration_number.present? ? @organization.registration_number : "Not provided" %>
              </dd>
            </div>
            
            <div class="sm:grid sm:grid-cols-3 sm:gap-4">
              <dt class="text-sm font-medium text-gray-500">Tax Number</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <%= @organization.tax_number.present? ? @organization.tax_number : "Not provided" %>
              </dd>
            </div>
            
            <div class="sm:grid sm:grid-cols-3 sm:gap-4">
              <dt class="text-sm font-medium text-gray-500">IBAN</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <%= @organization.iban.present? ? @organization.iban : "Not provided" %>
              </dd>
            </div>
            
            <div class="sm:grid sm:grid-cols-3 sm:gap-4">
              <dt class="text-sm font-medium text-gray-500">Created</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <%= @organization.created_at.strftime("%b %d, %Y") %>
              </dd>
            </div>
          </dl>
        </div>
      </div>
      
      <!-- Organization Owner -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-4 py-5 sm:p-6">
          <h2 class="text-lg font-medium text-gray-900">Owner</h2>
          <div class="mt-4 flex items-center">
            <div class="flex-shrink-0 h-12 w-12 rounded-full bg-gray-200 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-gray-900"><%= @organization.owner.full_name %></h3>
              <p class="text-sm text-gray-500"><%= @organization.owner.email %></p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Organization Members -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-4 py-5 sm:p-6">
          <div class="flex items-center justify-between">
            <h2 class="text-lg font-medium text-gray-900">Members</h2>
            <%= link_to organization_memberships_path(@organization), class: "text-sm text-blue-600 hover:text-blue-800" do %>
              View all
            <% end %>
          </div>
          <ul class="mt-4 divide-y divide-gray-200">
            <% @organization.memberships.includes(:user).limit(5).each do |membership| %>
              <li class="py-3 flex items-center justify-between">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-8 w-8 rounded-full bg-gray-200 flex items-center justify-center">
                    <span class="text-sm font-medium text-gray-600">
                      <%= membership.user.email[0..1].upcase %>
                    </span>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm font-medium text-gray-900"><%= membership.user.full_name %></p>
                    <p class="text-xs text-gray-500"><%= membership.user.email %></p>
                  </div>
                </div>
                <div>
                  <span class="inline-flex items-center px-2.5 py-0.5 text-xs font-medium <%= membership.admin? ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800' %>">
                    <%= membership.role.capitalize %>
                  </span>
                </div>
              </li>
            <% end %>
          </ul>
          <% if @organization.memberships.count > 5 %>
            <div class="mt-4 text-center border-t border-gray-200 pt-4">
              <%= link_to organization_memberships_path(@organization), class: "text-sm text-blue-600 hover:text-blue-800" do %>
                View all <%= @organization.memberships.count %> members
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>