<%= form_with(model: organization, class: "contents space-y-4") do |form| %>
  <%= render "shared/errors", object: form.object %>
  <div class="">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-input", autofocus: true, required: true %>
  </div>
  <div class="">
    <%= form.label :logo %>
    <%= form.file_field :logo, accept: "image/png, image/jpeg, image/gif", class: "form-input" %>
  </div>
  <div class="">
    <%= form.label :address %>
    <%= form.text_area :address, class: "form-input", required: false %>
  </div>
  <div class="">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-input", required: false %>
  </div>
  <div class="">
    <%= form.label :registration_number %>
    <%= form.text_field :registration_number, class: "form-input", required: false %>
  </div>
  <div class="">
    <%= form.label :tax_number %>
    <%= form.text_field :tax_number, class: "form-input", required: false %>
  </div>
  <div class="">
    <%= form.label :iban %>
    <%= form.text_field :iban, class: "form-input", required: false %>
  </div>
  <div class="inline">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
