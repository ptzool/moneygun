<div class="bg-gray-100 min-h-screen">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="flex items-center mb-6 space-x-3">
      <div class="flex-1">
        <h1 class="text-2xl font-bold text-gray-900"><%= t("task_timetrackings.show.title") %></h1>
        <p class="text-sm text-gray-500">
          Time logged on <%= @task_timetracking.date.strftime("%B %d, %Y") %> by <%= @task_timetracking.membership.user.first_name %> <%= @task_timetracking.membership.user.last_name %>
        </p>
      </div>
      <div class="flex space-x-2">
        <%= link_to organization_task_timetrackings_path(@organization), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
          Back to List
        <% end %>
        <%= link_to organization_task_path(@organization, @task_timetracking.task), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
          View Task
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="md:col-span-2">
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
          <div class="px-4 py-5 sm:px-6 flex justify-between items-center border-b border-gray-200">
            <div>
              <h3 class="text-lg font-medium leading-6 text-gray-900">Timetracking Details</h3>
              <p class="mt-1 max-w-2xl text-sm text-gray-500">Time entry information and details.</p>
            </div>
            <div class="flex space-x-2">
              <% if policy(@task_timetracking).edit? %>
                <%= link_to edit_organization_task_timetracking_path(@organization, @task_timetracking), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                  </svg>
                  Edit
                <% end %>
              <% end %>
              <% if policy(@task_timetracking).destroy? %>
                <%= button_to organization_task_timetracking_path(@organization, @task_timetracking, redirect_to: organization_task_path(@organization, @task_timetracking.task)),
                    method: :delete,
                    data: { turbo_confirm: t("task_timetrackings.destroy.confirm") },
                    class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                  Delete
                <% end %>
              <% end %>
            </div>
          </div>
          <div class="border-t border-gray-200">
            <dl>
              <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">Task</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                  <%= link_to @task_timetracking.task.name, organization_task_path(@organization, @task_timetracking.task), class: "font-medium text-blue-600 hover:text-blue-800" %>
                </dd>
              </div>
              <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">Project</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                  <%= @task_timetracking.task.project&.name || "Not assigned to a project" %>
                </dd>
              </div>
              <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">Member</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                  <%= @task_timetracking.membership.user.first_name %> <%= @task_timetracking.membership.user.last_name %>
                </dd>
              </div>
              <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">Date</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                  <%= @task_timetracking.date.strftime("%B %d, %Y") %> (<%= @task_timetracking.date.strftime("%A") %>)
                </dd>
              </div>
              <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">Time Period</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                  <% if @task_timetracking.start && @task_timetracking.end %>
                    <%= @task_timetracking.start.strftime("%H:%M") %> - <%= @task_timetracking.end.strftime("%H:%M") %>
                  <% else %>
                    Not specified (duration-based entry)
                  <% end %>
                </dd>
              </div>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">Duration</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                    <%= @task_timetracking.duration %> minutes (<%= (@task_timetracking.duration / 60.0).round(1) %> hours)
                  </span>
                </dd>
              </div>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">Created</dt>
                <dd class="mt-1 text-sm text-gray-500 sm:mt-0 sm:col-span-2">
                  <%= @task_timetracking.created_at.strftime("%B %d, %Y at %H:%M") %>
                </dd>
              </div>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                <dt class="text-sm font-medium text-gray-500">Last updated</dt>
                <dd class="mt-1 text-sm text-gray-500 sm:mt-0 sm:col-span-2">
                  <%= @task_timetracking.updated_at.strftime("%B %d, %Y at %H:%M") %>
                </dd>
              </div>
            </dl>
          </div>
        </div>
      </div>


      <!-- Sidebar -->
      <div class="md:col-span-1">
        <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
          <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
            <h3 class="text-lg font-medium leading-6 text-gray-900">Time Summary</h3>
          </div>
          <div class="p-4">
            <div class="space-y-4">
              <div>
                <div class="flex items-center justify-between">
                  <div class="text-sm font-medium text-gray-500">Hours</div>
                  <div class="text-sm font-semibold text-gray-900"><%= (@task_timetracking.duration / 60.0).round(1) %></div>
                </div>
                <div class="mt-1 w-full bg-gray-200 rounded-full h-2.5">
                  <div class="bg-blue-600 h-2.5 rounded-full" style="width: <%= [(@task_timetracking.duration / 60.0 / 8) * 100, 100].min %>%"></div>
                </div>
                <div class="mt-1 text-xs text-gray-500">Based on 8-hour workday</div>
              </div>
              
              <div class="pt-4 border-t border-gray-200">
                <h4 class="text-sm font-medium text-gray-700 mb-2">Task Status</h4>
                <span class="px-2 py-1 text-xs font-semibold rounded-full 
                  <%= @task_timetracking.task.closed? ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
                  <%= @task_timetracking.task.status&.humanize || "Open" %>
                </span>
              </div>
              
              <div class="pt-4 border-t border-gray-200">
                <h4 class="text-sm font-medium text-gray-700">Recent Activity</h4>
                <p class="text-xs text-gray-500 mt-2">Time tracking created on <%= @task_timetracking.created_at.strftime("%B %d") %></p>
                <% if @task_timetracking.created_at != @task_timetracking.updated_at %>
                  <p class="text-xs text-gray-500 mt-1">Updated <%= time_ago_in_words(@task_timetracking.updated_at) %> ago</p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
          <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
            <h3 class="text-lg font-medium leading-6 text-gray-900">Actions</h3>
          </div>
          <div class="p-4 space-y-3">
            <%= link_to organization_task_timetrackings_path(@organization, task_id: @task_timetracking.task.id), class: "w-full flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900 rounded-md" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
              </svg>
              View All Time Entries
            <% end %>
            
            <%= link_to organization_task_path(@organization, @task_timetracking.task), class: "w-full flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900 rounded-md" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
                <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
              </svg>
              Task Details
            <% end %>
            
            <% if policy(@task_timetracking).edit? %>
              <%= link_to edit_organization_task_timetracking_path(@organization, @task_timetracking), class: "w-full flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900 rounded-md" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                </svg>
                Edit Time Entry
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>