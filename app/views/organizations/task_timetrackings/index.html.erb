<% content_for :title, t("task_timetrackings.index.title") %>
<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <div class="flex flex-col bg-white shadow-sm rounded-lg border border-gray-200">
    <!-- Header section -->
    <div class="flex items-center justify-between px-6 py-5 border-b border-gray-200">
      <div class="flex items-center space-x-3">
        <h1 class="text-xl font-semibold text-gray-900"><%= t("task_timetrackings.index.title") %></h1>
        <span class="px-2.5 py-0.5 bg-blue-100 text-blue-800 text-xs font-medium rounded-full">
          <%= @task_timetrackings.count %>
        </span>
      </div>
      <% if policy(TaskTimetracking).new? %>
        <%= link_to organization_tasks_path(@organization),
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
          New Time Entry
        <% end %>
      <% end %>
    </div>
    <!-- Table section -->
    <div class="overflow-x-auto">
      <% if @task_timetrackings.any? %>
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr class="bg-gray-50">
              <th scope="col" class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Task</th>
              <th scope="col" class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <div class="flex items-center">
                  Date
                  <button class="ml-1 text-gray-400 hover:text-gray-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M5 12a1 1 0 102 0V6.414l1.293 1.293a1 1 0 001.414-1.414l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L5 6.414V12zM15 8a1 1 0 10-2 0v5.586l-1.293-1.293a1 1 0 00-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L15 13.586V8z" />
                    </svg>
                  </button>
                </div>
              </th>
              <th scope="col" class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Start</th>
              <th scope="col" class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">End</th>
              <th scope="col" class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <div class="flex items-center">
                  Duration
                  <button class="ml-1 text-gray-400 hover:text-gray-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M5 12a1 1 0 102 0V6.414l1.293 1.293a1 1 0 001.414-1.414l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L5 6.414V12zM15 8a1 1 0 10-2 0v5.586l-1.293-1.293a1 1 0 00-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L15 13.586V8z" />
                    </svg>
                  </button>
                </div>
              </th>
              <th scope="col" class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Member</th>
              <th scope="col" class="px-3 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @task_timetrackings.each do |task_timetracking| %>
              <tr class="hover:bg-gray-50">
                <td class="px-3 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="ml-1">
                      <div class="text-sm font-medium text-gray-900">
                        <%= link_to task_timetracking.task.name, organization_task_path(@organization, task_timetracking.task), class: "hover:text-blue-600" %>
                      </div>
                      <% if task_timetracking.task.project %>
                        <div class="text-xs text-gray-500">
                          <%= task_timetracking.task.project.name %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </td>
                <td class="px-3 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= task_timetracking.date.strftime("%b %d, %Y") %></div>
                  <div class="text-xs text-gray-500"><%= task_timetracking.date.strftime("%A") %></div>
                </td>
                <td class="px-3 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= task_timetracking.start&.strftime("%H:%M") || "-" %></div>
                </td>
                <td class="px-3 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= task_timetracking.end&.strftime("%H:%M") || "-" %></div>
                </td>
                <td class="px-3 py-4 whitespace-nowrap">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                    <%= task_timetracking.duration %> min
                  </span>
                </td>
                <td class="px-3 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= task_timetracking.membership.user.first_name %> <%= task_timetracking.membership.user.last_name %></div>
                </td>
                <td class="px-3 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to organization_task_task_timetracking_path(@organization, task_timetracking.task, task_timetracking), class: "text-blue-600 hover:text-blue-900 mr-3" do %>
                    <span class="sr-only">View</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                      <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                  <% if policy(task_timetracking).edit? %>
                    <%= link_to edit_organization_task_task_timetracking_path(@organization, task_timetracking.task, task_timetracking), class: "text-indigo-600 hover:text-indigo-900 mr-3" do %>
                      <span class="sr-only">Edit</span>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                      </svg>
                    <% end %>
                  <% end %>
                  <% if policy(task_timetracking).destroy? %>
                    <%= button_to organization_task_task_timetracking_path(@organization, task_timetracking.task, task_timetracking, redirect_to: organization_task_task_timetrackings_path(@organization, task_timetracking.task)),
                        method: :delete,
                        data: { turbo_confirm: t("task_timetrackings.destroy.confirm") },
                        form_class: "inline-block",
                        class: "text-red-600 hover:text-red-900" do %>
                      <span class="sr-only">Delete</span>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                      </svg>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <!-- Summary section -->
        <div class="bg-gray-50 px-6 py-4 border-t border-gray-200">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Time Summary</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200">
              <div class="text-sm font-medium text-gray-500">Total Hours</div>
              <div class="mt-1 flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900">
                  <%= (@task_timetrackings.sum(&:duration) / 60.0).round(1) %>
                </div>
                <div class="ml-1 text-sm text-gray-500">hrs</div>
              </div>
            </div>
            <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200">
              <div class="text-sm font-medium text-gray-500">Total Entries</div>
              <div class="mt-1 flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= @task_timetrackings.count %></div>
                <div class="ml-1 text-sm text-gray-500">entries</div>
              </div>
            </div>
            <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200">
              <div class="text-sm font-medium text-gray-500">Avg. Duration</div>
              <div class="mt-1 flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900">
                  <%= @task_timetrackings.any? ? (@task_timetrackings.average(:duration).to_f / 60.0).round(1) : 0 %>
                </div>
                <div class="ml-1 text-sm text-gray-500">hrs/entry</div>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="px-6 py-12 text-center">
          <div class="bg-gray-50 rounded-lg p-8 max-w-md mx-auto">
            <svg class="mx-auto h-16 w-16 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h3 class="mt-4 text-lg font-medium text-gray-900">No time entries found</h3>
            <% if params[:search].present? || params[:start_date].present? || params[:end_date].present? %>
              <p class="mt-2 text-sm text-gray-500">No time entries match your current filters. Try clearing some filters to see more results.</p>
              <div class="mt-6">
                <%= link_to organization_task_task_timetrackings_path(@organization, @task), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                  Clear filters
                <% end %>
              </div>
            <% else %>
              <p class="mt-2 text-sm text-gray-500">Get started by creating a new time entry for your tasks.</p>
              <div class="mt-6">
                <%= link_to organization_tasks_path(@organization), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
                  <svg class="mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                  </svg>
                  Create Time Entry
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
