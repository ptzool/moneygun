<div id="<%= dom_id task_timetracking %>" class="task-timetracking-item">
  <div class="card shadow mb-3">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">
        <%= link_to task_timetracking.task.name, organization_task_path(@organization, task_timetracking.task) %>
      </h5>
      <div class="badge bg-primary">
        <%= task_timetracking.duration %> minutes
      </div>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <p>
            <strong>Date:</strong>
            <%= task_timetracking.date %>
          </p>
          <p>
            <strong>Start time:</strong>
            <%= task_timetracking.start&.strftime("%H:%M") || "Not specified" %>
          </p>
          <p>
            <strong>End time:</strong>
            <%= task_timetracking.end&.strftime("%H:%M") || "Not specified" %>
          </p>
        </div>
        <div class="col-md-6">
          <p>
            <strong>Member:</strong>
            <%= task_timetracking.membership.user.name %>
          </p>
          <p>
            <strong>Created:</strong>
            <%= task_timetracking.created_at.strftime("%B %d, %Y") %>
          </p>
        </div>
      </div>
    </div>
    <div class="card-footer text-end">
      <%= link_to "Show", organization_task_timetracking_path(@organization, task_timetracking), class: "btn btn-sm btn-secondary" %>
      <% if policy(task_timetracking).edit? %>
        <%= link_to "Edit", edit_organization_task_timetracking_path(@organization, task_timetracking), class: "btn btn-sm btn-secondary" %>
      <% end %>
      <% if policy(task_timetracking).destroy? %>
        <%= button_to "Delete", organization_task_timetracking_path(@organization, task_timetracking, redirect_to: organization_task_timetrackings_path(@organization)), method: :delete, data: { turbo_confirm: t("task_timetrackings.destroy.confirm") }, class: "btn btn-sm btn-danger", form_class: "d-inline" if policy(task_timetracking).destroy? %>
      <% end %>
    </div>
  </div>
</div>