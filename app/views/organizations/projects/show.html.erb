<div class="container mx-auto px-6">
  <!-- Project Details Container -->
  <div class="bg-white rounded-lg shadow">
    <!-- Header with title and actions -->
    <div class="flex items-center justify-between p-6 border-b border-gray-200">
      <h2 class="text-lg font-medium">Project Details</h2>
      <div class="flex gap-2">
        <%= link_to edit_organization_project_path(@organization, @project), class: "px-3 py-2 text-blue-500 border rounded-lg hover:bg-gray-50" do %>
          <%= icon "pencil-square", class: [ "size-4" ] %>
        <% end %>
        <%= link_to organization_project_path(@organization, @project), method: :delete, class: "px-3 py-2 text-red-500 border rounded-lg hover:bg-gray-50", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
          <%= icon "trash", class: [ "size-4" ] %>
        <% end %>
      </div>
    </div>
    <!-- Project Information -->
    <div class="p-6">
      <div class="grid grid-cols-2 gap-6">
        <!-- Project ID -->
        <div class="col-span-1">
          <div class="text-sm text-gray-500 mb-1">Project ID</div>
          <div class="text-blue-500 font-medium">#<%= @project.id %></div>
        </div>
        <!-- Created At -->
        <div class="col-span-1">
          <div class="text-sm text-gray-500 mb-1">Created At</div>
          <div class="text-gray-900"><%= @project.created_at %></div>
        </div>
        <!-- Project Name -->
        <div class="col-span-2">
          <div class="text-sm text-gray-500 mb-1">Project Name</div>
          <div class="text-gray-900 font-medium"><%= @project.name %></div>
        </div>
        <!-- Project Manager -->
        <div class="col-span-2">
          <div class="text-sm text-gray-500 mb-1">Project Manager</div>
          <div class="flex items-center">
            <%= icon "user-circle", class: [ "size-12 text-gray-400" ] %>
            <div>
              <div class="font-medium text-gray-900"><%= @project.project_manager.user.full_name %></div>
              <div class="text-sm text-gray-500"><%= @project.project_manager.user.email %></div>
            </div>
          </div>
        </div>
        <!-- Description -->
        <div class="col-span-2">
          <div class="text-sm text-gray-500 mb-1">Description</div>
          <div class="text-gray-900 bg-gray-50 p-4 rounded-lg">
            <p><%= @project.description %></p>
          </div>
        </div>
      </div>
    </div>
    <!-- Users List Container -->
    <div class="bg-white rounded-lg shadow">
      <!-- Header with title and add button -->
      <div class="flex items-center justify-between p-6 border-b border-gray-200">
        <h2 class="text-lg font-medium">Tasks of Projects (<%= policy_scope(@project.tasks).count %>)</h2>
      </div>
      <!-- Search and filters -->
      <div class="p-4 border-b border-gray-200">
        <div class="flex items-center justify-between gap-4">
          <%= form_with method: :get, class: "flex gap-4" do |f| %>
            <%= f.label :priority, "Priority", class: "text-sm text-gray-500" %>
            <%= f.select :priority,
                    options_for_select([ 'low', 'medium', 'high' ], params[:priority]),
                    { include_blank: 'Priority' },
                    class: "px-10 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            <%= f.label :status, "Status", class: "text-sm text-gray-500" %>
            <%= f.select :status,
                    options_for_select([ 'open', 'closed' ], params[:status]),
                    { include_blank: 'Status' },
                    class: "px-10 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            <%= f.submit "Filter", class: "flex items-center px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600" %>
          <% end %>
        </div>
      </div>
      <!-- Table -->
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50">
            <tr>
              <th class="w-4 p-4"><input type="checkbox" class="rounded"></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Projekt</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Priority</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Planned Start</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Planned End</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Action</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @project_tasks.each do |task| %>
              <%= render task %>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- Pagination -->
      <div class="flex items-center justify-between px-6 py-4 border-t border-gray-200">
        <div class="text-sm text-gray-500">
          Showing <%= @project_tasks.offset_value + 1 %> to <%= @project_tasks.offset_value + @project_tasks.length %> of <%= @project_tasks.total_count %> entries
        </div>
        <div class="flex items-center gap-2">
          <%= paginate @project_tasks %>
        </div>
      </div>
    </div>
  </div>
</div>
