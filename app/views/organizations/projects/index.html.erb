<div class="w-full">
  <% content_for :title, "Projects" %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-lx lg:text-3xll">Projects</h1>
    <%= link_to "New project", new_organization_project_path(@organization), class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <div id="inboxes" class="min-w-full">
    <% @projects.each do |project| %>
      <%= render project %>
      <p>
        <%= link_to "Show this project", [ @organization, project ], class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
<div style="font-size: 2rem;">
  <%= paginate @projects %>
</div>
