<div class="container mx-auto px-6">
  <!-- Users List Container -->
  <div class="bg-white rounded-lg shadow">
    <!-- Header with title and add button -->
    <div class="flex items-center justify-between p-6 border-b border-gray-200">
      <h2 class="text-lg font-medium">Projects</h2>
      <%= button_to new_organization_project_path(@organization), method: :get, class: "flex items-center px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600" do %>
        <span class="mr-2">+</span>
        Add Project
      <% end %>
    </div>
    <!-- Search and filters -->
    <div class="p-4 border-b border-gray-200">
      <div class="flex items-center justify-between gap-4">
        <%= form_with method: :get, class: "flex gap-4" do |f| %>
          <%= f.label :archived, "Archived", class: "text-sm text-gray-500" %>
          <%= f.select :archived,
                  options_for_select([ 'true', 'false' ], params[:archived]),
                  { include_blank: 'Archived' },
                  class: "px-10 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          <%= f.submit "Filter", class: "flex items-center px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600" %>
        <% end %>
      </div>
    </div>
    <!-- Table -->
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="w-4 p-4"><input type="checkbox" class="rounded"></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Project Manager</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Archived</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created At</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Action</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @projects.each do |project| %>
            <%= render project %>
          <% end %>
        </tbody>
      </table>
    </div>
    <!-- Pagination -->
    <div class="flex items-center justify-between px-6 py-4 border-t border-gray-200">
      <div class="text-sm text-gray-500">
        ...
      </div>
      <div class="flex items-center gap-2">
        <%= paginate @projects %>
      </div>
    </div>
  </div>
</div>
