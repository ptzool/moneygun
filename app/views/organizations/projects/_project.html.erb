<tr class="hover:bg-gray-50 border-t border-gray-200">
  <td class="w-10 pl-4 pr-1 py-3">
    <div class="flex items-center justify-center">
      <input type="checkbox" class="h-4 w-4 text-blue-600 rounded border-gray-300 focus:ring-blue-500">
    </div>
  </td>
  <td class="px-3 py-3 whitespace-nowrap">
    <span class="text-xs text-blue-600 font-medium hover:underline">
      <%= link_to "##{project.id}", [@organization, project] %>
    </span>
  </td>
  <td class="px-3 py-3">
    <div class="flex items-start">
      <% if project.project_logo.attached? %>
        <%= image_tag project.project_logo.variant(resize_to_limit: [24, 24]), class: "h-6 w-6 mr-2 rounded flex-shrink-0" %>
      <% else %>
        <div class="h-6 w-6 mr-2 rounded bg-blue-100 text-blue-600 flex items-center justify-center flex-shrink-0">
          <span class="text-xs font-bold"><%= project.name[0].upcase %></span>
        </div>
      <% end %>
      
      <div class="min-w-0 flex-1">
        <%= link_to [@organization, project], class: "text-sm font-medium text-gray-900 hover:text-blue-600 truncate block" do %>
          <%= project.name %>
        <% end %>
        <div class="text-xs text-gray-500 truncate">
          <%= project.description&.truncate(40) || "No description" %>
        </div>
      </div>
    </div>
  </td>
  <td class="px-3 py-3 whitespace-nowrap">
    <div class="flex items-center">
      <div class="flex-shrink-0 h-8 w-8 rounded-full bg-gray-200 flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-gray-900 truncate"><%= project.project_manager.user.full_name %></p>
        <p class="text-xs text-gray-500 truncate">Project Manager</p>
      </div>
    </div>
  </td>
  <td class="px-3 py-3 whitespace-nowrap">
    <% if project.archived %>
      <span class="inline-flex items-center px-2.5 py-0.5 text-xs font-medium bg-gray-100 text-gray-800">
        Archived
      </span>
    <% else %>
      <span class="inline-flex items-center px-2.5 py-0.5 text-xs font-medium bg-green-100 text-green-800">
        Active
      </span>
    <% end %>
  </td>
  <td class="px-3 py-3 whitespace-nowrap text-sm text-gray-500">
    <%= project.created_at.strftime("%b %d, %Y") %>
  </td>
  <td class="px-3 py-3 text-right whitespace-nowrap">
    <div class="inline-flex items-center space-x-1">
      <%= link_to organization_project_path(@organization, project), 
          class: "p-1.5 text-gray-500 hover:text-blue-600 hover:bg-blue-50 rounded-md transition-colors", 
          title: "View project" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
          <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
          <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
        </svg>
      <% end %>
      
      <%= link_to edit_organization_project_path(@organization, project), 
          class: "p-1.5 text-gray-500 hover:text-green-600 hover:bg-green-50 rounded-md transition-colors", 
          title: "Edit project" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
        </svg>
      <% end %>
      
      <%= link_to organization_project_path(@organization, project), 
          method: :delete, 
          class: "p-1.5 text-gray-500 hover:text-red-600 hover:bg-red-50 rounded-md transition-colors", 
          data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this project?" },
          title: "Delete project" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
      <% end %>
    </div>
  </td>
</tr>