<!-- Table rows would be generated dynamically -->
<tr class="hover:bg-gray-50">
  <td class="w-4 p-4"><input type="checkbox" class="rounded"></td>
  <td class="px-6 py-4 text-sm text-blue-500"><%= link_to "##{project.id}", [ @organization, project ] %></td>
  <td class="px-6 py-4">
    <div class="font-medium"><%= link_to "#{project.name}", [ @organization, project ] %></div>
  </td>
  <td class="px-6 py-4 text-sm"><%= project.project_manager.user.full_name %></td>
  <td class="px-6 py-4 flex-initial w-30">
    <span class="px-2 py-1 text-sm"><%= project.created_at %></span>
  </td>
  <td class="px-6 py-4">
    <div class="flex gap-2">
      <%= link_to organization_project_path(@organization, project), class: "px-3 py-2 text-blue-500 border rounded-lg hover:bg-gray-50" do %>
        <%= icon "eye", class: [ "size-4" ] %>
      <% end %>
      <%= link_to edit_organization_project_path(@organization, project), class: "px-3 py-2 text-green-500 border rounded-lg hover:bg-gray-50" do %>
        <%= icon "pencil-square", class: [ "size-4" ] %>
      <% end %>
      <%= link_to organization_project_path(@organization, project), method: :delete, class: "px-3 py-2 text-red-500 border rounded-lg hover:bg-gray-50", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
        <%= icon "trash", class: [ "size-4" ] %>
      <% end %>
    </div>
  </td>
</tr>
