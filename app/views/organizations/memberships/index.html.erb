<div class="container mx-auto px-6">
  <!-- Users List Container -->
  <div class="bg-white rounded-lg shadow">
    <!-- Header with title and add button -->
    <div class="flex items-center justify-between p-6 border-b border-gray-200">
      <h2 class="text-lg font-medium">Memberships</h2>
      <%= link_to "+ Add membership", new_organization_membership_path(@organization), class: "flex items-center px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600" if policy(@organization.memberships.new).new? %>
    </div>
    <!-- Search and filters -->
    <div class="p-4 border-b border-gray-200">
      <div class="flex items-center justify-between gap-4">
        <div class="flex-1">
          <input type="text"
                 placeholder="Search for name, email..."
                 class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        <div class="flex items-center gap-4">
          <select class="px-4 py-2 border text-blue-500 border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
            <option>Placeholder</option>
          </select>
        </div>
      </div>
    </div>
    <!-- Table -->
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="w-4 p-4"><input type="checkbox" class="rounded"></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">First Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Last Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Role</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Action</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @memberships.each do |membership| %>
            <!-- Table rows would be generated dynamically -->
            <tr class="hover:bg-gray-50">
              <td class="w-4 p-4"><input type="checkbox" class="rounded"></td>
              <td class="px-6 py-4 text-sm text-blue-500"><%= membership.id %></td>
              <td class="px-6 py-4"><%= membership.user.first_name %></td>
              <td class="px-6 py-4 text-sm"><%= membership.user.last_name %></td>
              <td class="px-6 py-4 text-sm"><%= membership.user.email %></td>
              <td class="px-6 py-4 text-sm"><%= membership.role %></td>
              <td class="px-6 py-4">
                <div class="flex gap-2">
                  <%= link_to edit_organization_membership_path(membership.organization, membership), class: "px-3 py-2 text-blue-500 border rounded-lg hover:bg-gray-50", data: { turbo_frame: "_top" } do %>
                    <%= icon "pencil-square", class: "size-4" %>
                  <% end if policy(membership).edit? %>
                  <%= link_to organization_membership_path(membership.organization, membership), class: "px-3 py-2 text-red-500 border rounded-lg hover:bg-gray-50", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
                    <%= icon "trash", class: "size-4" %>
                  <% end if policy(membership).destroy? %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!-- Pagination -->
    <div class="flex items-center justify-between px-6 py-4 border-t border-gray-200">
      <div class="text-sm text-gray-500">
      </div>
      <div class="flex items-center gap-2">
      </div>
    </div>
  </div>
