<div id="confirmation-modal" class="modal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true" style="display: none; position: fixed; top: 0; left: 0; z-index: 1050; width: 100%; height: 100%; overflow: hidden; outline: 0; background-color: rgba(0, 0, 0, 0.5);">
  <div class="modal-dialog" style="position: relative; width: auto; margin: 1.75rem auto; max-width: 500px; pointer-events: none; transform: translate(0, 0); transition: transform 0.3s ease-out;">
    <div class="modal-content" style="position: relative; display: flex; flex-direction: column; width: 100%; pointer-events: auto; background-color: #fff; background-clip: padding-box; border: 1px solid rgba(0, 0, 0, 0.2); border-radius: 0.3rem; outline: 0;">
      <div class="modal-header" style="display: flex; flex-shrink: 0; align-items: center; justify-content: space-between; padding: 1rem; border-bottom: 1px solid #dee2e6; border-top-left-radius: calc(0.3rem - 1px); border-top-right-radius: calc(0.3rem - 1px);">
        <h5 class="modal-title" id="confirmationModalLabel">Confirm Action</h5>
        <button type="button" class="btn-close" id="modal-close-button" style="background: transparent; border: 0; font-size: 1.5rem; font-weight: 700; line-height: 1; color: #000;">&times;</button>
      </div>
      <div class="modal-body" style="position: relative; flex: 1 1 auto; padding: 1rem;">
        <p id="confirmation-message">Are you sure you want to proceed?</p>
      </div>
      <div class="modal-footer" style="display: flex; flex-wrap: wrap; flex-shrink: 0; align-items: center; justify-content: flex-end; padding: 0.75rem; border-top: 1px solid #dee2e6; border-bottom-right-radius: calc(0.3rem - 1px); border-bottom-left-radius: calc(0.3rem - 1px);">
        <button type="button" class="btn btn-secondary" id="cancel-button" style="margin-right: 0.25rem;">Cancel</button>
        <button type="button" class="btn btn-primary" id="confirm-button">Confirm</button>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('confirmation-modal');
    const closeButton = document.getElementById('modal-close-button');
    const cancelButton = document.getElementById('cancel-button');
    
    // Close modal functions
    const closeModal = function() {
      modal.style.display = 'none';
    };
    
    closeButton.addEventListener('click', closeModal);
    cancelButton.addEventListener('click', closeModal);
    
    // Click outside to close
    window.addEventListener('click', function(event) {
      if (event.target === modal) {
        closeModal();
      }
    });
    
    window.showConfirmationModal = function(message, confirmCallback) {
      const messageElement = document.getElementById('confirmation-message');
      const confirmButton = document.getElementById('confirm-button');
      
      // Set message
      messageElement.textContent = message;
      
      // Set confirm button action
      confirmButton.onclick = function() {
        confirmCallback();
        closeModal();
      };
      
      // Show modal
      modal.style.display = 'block';
    };
  });
</script>